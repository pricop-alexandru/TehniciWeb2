<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : 'New Arrivals - OnlyMerch' %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles/styles.css">
</head>
<body>
    <%- include('../partials/header') %>
    
    <main class="container my-5">
        <div class="row">
            <div class="col-12">
                <h1 class="mb-4">New Arrivals</h1>
                <p class="lead mb-5">Check out our latest featured products and collections.</p>
                
                <% if (typeof products !== 'undefined' && products && products.length > 0) { %>
                    <div class="row">
                        <% products.forEach(product => { %>
                            <div class="col-md-4 col-lg-3 mb-4">
                                <div class="card h-100 product-card">
                                    <div class="position-relative">
                                        <img src="<%= product.image_url %>" class="card-img-top" alt="<%= product.name %>">
                                        <% if (product.is_featured) { %>
                                            <span class="badge bg-warning position-absolute top-0 end-0 m-2">Featured</span>
                                        <% } %>
                                    </div>
                                    <div class="card-body d-flex flex-column">
                                        <h5 class="card-title"><%= product.name %></h5>
                                        <p class="card-text text-muted small flex-grow-1"><%= product.description %></p>
                                        <div class="mt-auto">
                                            <div class="d-flex justify-content-between align-items-center mb-2">
                                                <span class="h5 mb-0 text-primary">$<%= product.price %></span>
                                                <small class="text-muted"><%= product.stock %> in stock</small>
                                            </div>
                                            <div class="mb-2">
                                                <% if (product.tags && product.tags.length > 0) { %>
                                                    <% product.tags.forEach(tag => { %>
                                                        <span class="badge bg-secondary me-1"><%= tag %></span>
                                                    <% }) %>
                                                <% } %>
                                            </div>
                                            <a href="/shop/<%= product.id %>" class="btn btn-primary w-100">View Details</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                <% } else { %>
                    <div class="text-center py-5">
                        <h3>No featured products available</h3>
                        <p class="text-muted">Check back soon for new arrivals!</p>
                        <a href="/shop" class="btn btn-primary">Browse All Products</a>
                    </div>
                <% } %>
            </div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
